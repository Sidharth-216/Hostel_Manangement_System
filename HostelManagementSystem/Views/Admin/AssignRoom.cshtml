@model HostelManagementSystem.Models.Allocation

<h2>Assign Room</h2>

<form asp-action="AssignRoom" method="post">
    <!-- âœ… ApplicationId must have a value -->
    <input type="hidden" asp-for="ApplicationId" value="@Model.ApplicationId" />

    <div class="form-group">
        <label asp-for="RoomId">Select Room</label>
        <select asp-for="RoomId" class="form-control" asp-items="ViewBag.Rooms">
            <option value="">-- Select Room --</option>
        </select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Assign</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
