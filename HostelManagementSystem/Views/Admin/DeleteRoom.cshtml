@model HostelManagementSystem.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<div class="alert alert-warning">
    Are you sure you want to delete Room <strong>@Model.RoomNumber</strong>?
</div>

<form asp-action="DeleteRoom">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="ManageRooms" class="btn btn-secondary">Cancel</a>
</form>
